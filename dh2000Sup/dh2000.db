record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(bi, "$(P)INTERLOCK"){
    field(DESC, "Status of the interlock")
    field(SCAN, "Passive")
    field(ZNAM, "OKAY")
    field(ONAM, "TRIGGERED")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
}

record(bi, "$(P)SHUTTER:STATUS"){
    field(DESC, "Status of the shutter")
    field(DTYP, "stream")
    field(ZNAM, "CLOSED")
    field(ONAM, "OPEN")
    field(SCAN, "1 second")
    field(INP, "@dh2000.proto getStatus($(P)INTERLOCK) $(PORT)")
    info(INTEREST, "HIGH")
    info(archive, "VAL")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
}

record(bo, "$(P)SHUTTER:OPEN"){
    field(DESC, "Opens the shutter")
    field(DTYP, "stream")
    field(OUT, "@dh2000.proto openShutter $(PORT)")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
}

record(bo, "$(P)SHUTTER:CLOSE"){
    field(DESC, "Closes the shutter")
    field(DTYP, "stream")
    field(OUT, "@dh2000.proto closeShutter $(PORT)")
    field(SIML, "$(P)SIM")
    field(SDIS, "$(P)DISABLE")
}

record(mbbo, "$(P)TOGGLE:SHUTTER:SP") {
    field(DESC, "Toggle shutter open/closed")
    field(DTYP, "Raw Soft Channel")

    # Defines which PV to process in the fanout record
    field(OUT, "$(P)_TOGGLE:SHUTTER.SELN PP")

    field(ZRVL, "1")
    field(ONVL, "2")

    field(ZRST, "Open")
    field(ONST, "Close")
    info(INTEREST, "HIGH")
}

record(fanout, "$(P)_TOGGLE:SHUTTER") {
    field(SELM, "Specified")

    field(LNK1, "$(P)SHUTTER:OPEN PP")
    field(LNK2, "$(P)SHUTTER:CLOSE PP")
}
